[global/wm]
margin-top = 0
margin-bottom = 0
include-file = $HOME/.config/polybar/frappe.ini
include-file = $HOME/.config/polybar/modules.ini
{{- if eq $.chezmoi.os "openbsd" }}
include-file = $HOME/.config/polybar/modules_openbsd.ini
{{- else }}
include-file = $HOME/.config/polybar/modules_linux.ini
{{- end }}

[bar/main]
monitor = ${env:MONITOR:}

width = 100%
height = 18pt
fixed_center = true

dpi = {{.dpi}}

background = ${colors.crust}
foreground = ${colors.text}

padding-right = 1

module-margin = 1

font-0 = monospace:size=11;2
font-1 = M Plus 1 Code:size=11;2
font-2 = Noto Sans Mono CJK KR:size=11;2
font-3 = emoji:size=11;2

modules-left = bspwm title
modules-center = datetime
modules-right = audio battery fcitx memory cpu network

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

wm-restack = bspwm

override-redirect = false

locale = ja_JP.UTF-8

[settings]
screenchange-reload = true
