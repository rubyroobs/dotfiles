export LC_ALL=en_US.UTF-8  
export LC_DATE=ja_JP.UTF-8
export LANG=en_US.UTF-8
export EDITOR=nvim
export GDK_SCALE={{ divf .dpi 96 }}
export GDK_DPI_SCALE={{ divf 96 .dpi }}
export QT_SCREEN_SCALE_FACTORS={{ divf .dpi 96 }}
export QT_FONT_DPI={{ .dpi }}
if [[ "$OSTYPE" == "openbsd"* ]]; then
    export GTK_IM_MODULE=xim
else
    export GTK_IM_MODULE=fcitx
fi
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
export GLFW_IM_MODULE=ibus
export QT_AUTO_SCREEN_SCALE_FACTOR=1

xrdb -load ~/.Xresources
xmodmap ~/.Xmodmap
xsetroot -cursor_name left_ptr

for f in /etc/X11/xinit/xinitrc.d/?*.sh; do
    [ -x "$f" ] && . "$f"
done
unset f

if [[ -f "/usr/X11R6/share/X11/xkb/types/cutpaste" ]]; then
    setxkbmap -option cutpaste:super
elif [[ -f "/usr/share/X11/xkb/types/cutpaste" ]]; then
    setxkbmap -option cutpaste:super
fi

if [[ "$OSTYPE" == "openbsd"* ]]; then
    if [ -x ${PREFIX}/bin/dbus-launch -a -z "${DBUS_SESSION_BUS_ADDRESS}" ]; then
        eval `dbus-launch --sh-syntax --exit-with-x11`
    fi

    find /usr/local/share/fonts -type f -name 'fonts.dir' | sed -r 's|/[^/]+$||' | sort | uniq | xargs -I % xset fp+ %
    xset fp rehash
else
    find /usr/share/fonts -type f -name 'fonts.dir' | sed -r 's|/[^/]+$||' | sort | uniq | xargs -I % xset fp+ %
    xset fp rehash
fi

if command -v autorandr > /dev/null 2>&1; then
    autorandr --change --force
    sleep 1
fi

if command -v feh > /dev/null 2>&1; then
    feh --bg-center --bg-fill --no-fehbg --randomize ~/.wallpapers/*.png &
fi

xset s 600

if command -v runsvdir > /dev/null 2>&1; then
    runsvdir ~/.runit/runsvdir &
fi

if command -v bspwm > /dev/null 2>&1; then
    exec dbus-run-session -- bspwm
fi
