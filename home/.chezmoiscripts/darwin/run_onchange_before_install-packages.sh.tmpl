{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "cmake"
     "coreutils"
     "dockutil"
     "eza"
     "fd"
     "ffmpeg"
     "gh"
     "git"
     "git-lfs"
     "gnu-units"
     "gnupg"
     "grep"
     "jq"
     "libsodium"
     "marked"
     "openjdk"
     "pinentry-mac"
     "python"
     "rclone"
     "ripgrep"
     "ruby-build"
     "tmux"
     "wget"
     "xz"
     "yt-dlp" -}}
{{ $casks := list
     "1password"
     "1password-cli"
     "alfred"
     "bartender"
     "dropbox"
     "google-chrome"
     "google-cloud-sdk"
     "jetbrains-toolbox"
     "keybase"
     "kitty"
     "miniconda"
     "mullvadvpn"
     "notion"
     "slack"
     "sublime-text"
     "todoist"
     "transmit"
     "visual-studio-code"
     "vlc"
     "zoom" -}}

brew bundle --verbose --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

{{ end -}}
